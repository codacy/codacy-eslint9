{
  "compilerOptions": {
    "allowJs": false, // Disable if not needed for .js files
    "checkJs": false, // Disable if not needed for .js files
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "noEmit": true,
    "strict": true, // Enables strict type checking
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ESNext",
    "skipLibCheck": true, // Speeds up type checking
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}